@model IEnumerable<NiceHouse.Models.Room>

@{
    ViewBag.Title = "Search Rooms";
    var hotelId = ViewBag.HotelId;
}

<h2 class="text-center my-4 text-primary fw-bold">Search Rooms</h2>
<hr />

@using (Html.BeginForm("Rooms", "Search", FormMethod.Get, new { hotelId }))
{
    <div class="form-row mb-4 align-items-center mt-3 d-flex justify-content-between">
        <div class="form-group col-md-3">
            <label for="minPrice" class="fw-bold text-primary mb-2" style="margin-left:4px;">Min Price:</label>
            @Html.TextBox("minPrice", null, new { @class = "form-control", @placeholder = "Min price" })
        </div>
        <div class="form-group col-md-3">
            <label for="maxPrice" class="fw-bold text-primary mb-2" style="margin-left:3px;">Max Price:</label>
            @Html.TextBox("maxPrice", null, new { @class = "form-control", @placeholder = "Max price" })
        </div>
        <div class="form-group col-md-3">
            <label for="numberOfBeds" class="fw-bold text-primary mb-2" style="margin-left:2px;">Number of Beds:</label>
            @Html.TextBox("numberOfBeds", null, new { @class = "form-control", @placeholder = "Number of beds" })
        </div>
        <div class="form-group col-md-2 d-flex align-items-end">
            <input type="submit" value="Search" class="btn btn-primary btn-block" style="margin-top: 15px" />
        </div>
    </div>


}

<div class="row mt-4">
    @foreach (var room in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100 border-0">
                @if (room.RoomType.Images != null && room.RoomType.Images.Any())
                {
                    <img src="@room.RoomType.Images.First().ImageUrl" class="card-img-top rounded-top" alt="Room Image" />
                }
                <div class="card-body">
                    <h5 class="card-title text-primary fw-bold">@room.RoomType.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@room.Hotel.Name</h6>
                    <p class="fw-bold text-success">Price: $@room.RoomType.Price</p>
                    <p class="fw-bold text-secondary">Number of Beds: @room.RoomType.NumberOfBeds</p>
                    <button class="btn btn-outline-primary btn-block mt-2" onclick="showBookingForm('@room.Id')">Book Now</button>
                </div>
            </div>
        </div>
    }
</div>


<!------------------Modal------------------------->


<div class="modal fade" id="bookingModal" tabindex="-1" role="dialog" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title fw-bold text-center" id="bookingModalLabel">Booking Form</h4>

            </div>

            <div class="modal-body">
                <form id="bookingForm">
                    <div class="form-group">
                        <label for="fullName" class="fw-bold text-primary mb-3">Full Name:</label>
                        <input type="text" class="form-control" id="fullName" placeholder="Enter your full name">
                    </div>
                    <div class="form-group">
                        <label for="phoneNumber" class="fw-bold text-primary mb-3">Phone Number:</label>
                        <input type="text" class="form-control" id="phoneNumber" placeholder="Enter your phone number">
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal" onclick="closeBookingForm()">Close</button>
                <button type="button" class="btn btn-outline-success" onclick="confirmBooking()">Confirm Booking</button>
            </div>
        </div>
    </div>
</div>


<!--------------------------------------------------->
@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        function showBookingForm(roomId) {
            $('#bookingModal').modal('show');
            $('#roomId').val(roomId);
        }

        function closeBookingForm() {
            $('#bookingModal').modal('hide');
        }

        function confirmBooking() {
            var fullName = $('#fullName').val();
